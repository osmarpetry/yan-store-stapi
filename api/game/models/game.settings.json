{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "name": "game",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "short_description": {
      "type": "text",
      "required": true,
      "unique": false,
      "maxLength": 160
    },
    "description": {
      "type": "text",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "release_date": {
      "type": "date",
      "required": false
    },
    "rating": {
      "type": "enumeration",
      "enum": [
        "FREE",
        "PEGI3",
        "PEGI7",
        "PEGI12",
        "PEGI16",
        "PEGI18"
      ]
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "galery": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "categories": {
      "collection": "category",
      "via": "games",
      "dominant": true
    },
    "developers": {
      "collection": "developer",
      "via": "games",
      "dominant": true
    },
    "plataforms": {
      "collection": "plataform",
      "via": "games",
      "dominant": true
    },
    "publisher": {
      "model": "publisher",
      "via": "games"
    }
  }
}
